            </intent-filter>
        </activity>

        <activity android:name=".FantasyZoo"
            android:label="@string/main_page">
        </activity>

        <activity android:name=".ShopActivity"
            android:label="@string/shop_label">

        </activity>

        <activity android:name=".CreatureShopActivity"
            android:label="@string/shop_label">

        </activity>

        <activity android:name=".CreatureStorageActivity"
            android:label="@string/storage_label">

        </activity>

        <activity android:name=".UserStorageActivity"
            android:label="@string/storage_label">

        </activity>

    </application>

</manifest>
